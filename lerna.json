{
  "packages": ["packages/*"],
  "npmClient": "yarn",
  "version": "independent",
  "useWorkspaces": true,
  "command": {
    "version": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "createRelease": "github",
      "message": "chore: [skip ci] bump packages"
    },
    "publish": {
      "conventionalCommits": true,
      "createRelease": "github",
      "message": "chore: [skip ci] bump packages"
    }
  }
}
